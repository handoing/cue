{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack serve --config example/webpack.config.js",
    "watch": "node scripts/watch.js",
    "build": "node scripts/build.js",
    "lint": "eslint --ext .js packages/*/src/** packages/*/index.js",
    "lint:fix": "eslint --format codeframe --fix --ext .js packages/*/src/** packages/*/index.js",
    "test": "npm run build && jest",
    "postinstall": "lerna bootstrap"
  },
  "engines": {
    "node": ">=12.16.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "css-loader": "^5.0.1",
    "esbuild": "^0.8.42",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "webpack": "^5.15.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  }
}
