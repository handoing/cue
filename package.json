{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "pnpm run:example",
    "build:all": "pnpm build --filter 'cue*'",
    "run:example": "pnpm build:all && vite --config example/vite.config.js",
    "run:template-explorer": "pnpm build:all && pnpm dev --filter 'template-explorer'",
    "test": "pnpm build:all && jest",
    "lint": "eslint --format codeframe --ext .js packages/*/src/** packages/*/index.js",
    "lint:fix": "eslint --fix --ext .js packages/*/src/** packages/*/index.js",
    "contributors:init": "all-contributors init",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "engines": {
    "node": ">=14.17.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "dependencies": {
    "vite": "^2.5.3"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.20.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.2.1"
  }
}
